@code {
    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    private static string datapath = @"C:\PercobaanNulisLog\NulisLogData.txt";
    private string readEur;
    private string readAud;
    private string readCny;
    private string readSgd;
    private string readUsd;
    private string readThb;
    private string readKrw;
    private string readMyr;
    private string readGbp;
    private string readJpy;
    private string readHkd;
    private string readTwd;
    private string[] converter = new string[12];

    protected override async Task OnInitializedAsync()
    {
        for (int i = 0; i < converter.Length; i++)
        {
            if (i == 0)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_EUR);
            else if (i == 1)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_AUD);
            else if (i == 2)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_CNY);
            else if (i == 3)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_SGD);
            else if (i == 4)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_USD);
            else if (i == 5)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_THB);
            else if (i == 6)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_KRW);
            else if (i == 7)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_MYR);
            else if (i == 8)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_GBP);
            else if (i == 9)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_JPY);
            else if (i == 10)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_HKD);
            else if (i == 11)
                converter[i] = config.Read("CONVERSION", Config.PARAM_CONVERSION_TWD);
        }
        File.WriteAllText(datapath, "");
        transaksi.AddConverter(converter);
        readEur = transaksi.converter[0];
        readAud = transaksi.converter[1];
        readCny = transaksi.converter[2];
        readSgd = transaksi.converter[3];
        readUsd = transaksi.converter[4];
        readThb = transaksi.converter[5];
        readKrw = transaksi.converter[6];
        readMyr = transaksi.converter[7];
        readGbp = transaksi.converter[8];
        readJpy = transaksi.converter[9];
        readHkd = transaksi.converter[10];
        readTwd = transaksi.converter[11];
    }

    private async Task CurrencyDetail()
    {
        OnClick.InvokeAsync("currencydetail");
    }

    private async Task TermCondition()
    {
        OnClick.InvokeAsync("termcondition");
    }

