    private async Task BillAcceptor()
    {
        do
        {
            await Task.Delay(200);
            datatext = File.ReadAllText(datapath);
            if (datatext != "")
            {
                data = datatext.Split(",");
                for (int i = 0; i < data.Length; i++)
