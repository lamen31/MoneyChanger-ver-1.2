                transaksi.AddListAcceptor(tipeuang, nilaiuang);
                File.WriteAllText(datapath, "");

                totaluang = ConvertCash(tipeuang, nilaiuang);
                transaksi.AddTotalCash(totaluang.ToString());
                StateHasChanged();
            }
        } while (loopBill);
    }

