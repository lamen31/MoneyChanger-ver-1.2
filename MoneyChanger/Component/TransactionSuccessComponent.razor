@using Microsoft.AspNetCore.Components

<!-- ======= Hero Section ======= -->
<section id="hero" style="margin-top: 50px;">

    <div class="container">
        <div class="row">
            <div class="col-xl-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center" data-aos="fade-up">
                <h3 style="color: #00529C;">Please Take Your Money and Receipt</h3>
                <h2 style="font-size: 35px;">Your Transaction <b style="color: #27A32C;">Sucessful</b></h2>
            </div>
            <div class="col-xl-6 order-1 order-lg-2 hero-img" data-aos="fade-left">
                <img src="assets/img/sucess.png" class="img-fluid" alt="" style="width: 100%;">
            </div>
        </div>
    </div>
</section>
<!-- End Hero -->

<!-- ======= Footer ======= -->
<footer id="footer" class="fixed-bottom">
    <div class="container" style="display: flex;">
        <div class="col-xl-2 order-1 order-lg-1">
            <!-- <button type="button" class="btn btn-primary" style="background-color: #4E4E4E;">Back</button> -->
        </div>
        <div class="col-xl-8 order-2 order-lg-2">
            <ol class="track-progress" style="margin-left: 0%; margin-bottom: 2%;">
                <li class="done">
                    <em>1</em>
                    <span>Currency</span>
                </li>
                <li class="done">
                    <em>2</em>
                    <span>T & C</span>
                </li>
                <li class="done">
                    <em>3</em>
                    <span>Menu</span>
                </li>
                <li class="done">
                    <em>4</em>
                    <span>Verification</span>
                </li>
                <li class="done">
                    <em>5</em>
                    <span>Insert Money</span>
                </li>
                <li class="done">
                    <em>6</em>
                    <span>Done</span>
                </li>
            </ol>
        </div>
        <div class="col-xl-2 order-3 order-lg-3">
            @*<a href="home.html"><button type="button" class="btn btn-primary" style="float: right;">Done</button></a>*@
        </div>
    </div>
</footer><!-- End Footer -->

